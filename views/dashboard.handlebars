{{!-- {{#if posts.length}} --}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <ul>
      <article class="post">
    <div class="title">
       <a href="/post/{{post.id}}">{{post.title}}</a>
    </div>
    <div class="meta">
        <strong>Posted by {{user.username}} on {{format_date}}</strong>
    </div>
    </article>
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </ul>
    {{/each}}
  </ol>
</section>
{{!-- {{/if}} --}}

<div>
    <button type="submit"><a href="/newpost" class="create-btn">Create New Post</a></button>
    <p><a class="link" href="/newpost">Create New Post</a></p>
</div>